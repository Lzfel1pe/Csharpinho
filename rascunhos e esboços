@areadocirculo

using System;
					
public class Program
{
	public const double Pi = 3.1415;
	public static void Main()
	{
		double raio = 3.7;
		Console.WriteLine(Pi * (raio*raio));
	}
}

@circunferencia

using System;
					
public class Program
{
	public const double Pi = 3.14;
	public static void Main()
	{
		double raio = 3.7;
		Console.WriteLine(2*Pi*raio);
	}
}
